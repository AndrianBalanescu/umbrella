{
	"name": "@example/zig-canvas",
	"version": "0.0.1",
	"private": true,
	"description": "Zig-based DOM creation & canvas drawing app",
	"repository": "https://github.com/thi-ng/umbrella",
	"author": "Karsten Schmidt <k+npm@thi.ng>",
	"license": "Apache-2.0",
	"scripts": {
		"start": "yarn build:zig && vite --open",
		"build": "tsc && yarn build:zig && vite build --base='./'",
		"build:zig": "zig build && wasm-opt src/main.wasm -o src/main.wasm -O3 && wasm-dis -o src/main.wast src/main.wasm",
		"preview": "vite preview --host --open"
	},
	"devDependencies": {
		"typescript": "^4.8.3",
		"vite": "^3.1.3"
	},
	"dependencies": {
		"@thi.ng/api": "workspace:^",
		"@thi.ng/logger": "workspace:^",
		"@thi.ng/wasm-api": "workspace:^",
		"@thi.ng/wasm-api-dom": "workspace:^"
	},
	"browser": {
		"process": false
	},
	"thi.ng": {
		"readme": true,
		"screenshot": "examples/zig-canvas.png"
	}
}
